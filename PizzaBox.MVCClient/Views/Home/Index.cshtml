@model PizzaBox.Domain.Models.Login

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div id="button">
        <form action="/home/index" method="POST" id="login">  
            <div>
                <label for="user">Username</label>
                <input type="text" id="user" name="user" required>
                <label for="pass">Password</label>
                <input type="password" id="pass" name="pass" required>
            </div>
        </form>       
        <form action="/register/index" id="register"></form>
        <button type="submit" form="login">Login</button>
        <button type="submit" form="register">Register</button>
    </div>
</div>

